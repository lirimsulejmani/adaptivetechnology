@model List<AT.Repository.Model.AdaptationTechnique>
@{
    ViewBag.Title = "Adaptation Techniques";
}

@using (Html.BeginForm("ApplyAdaptationTechniques", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    
    <div class="container body-content">
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h5>Adaptation techniques</h5>
                    </div>
                    <div class="panel-body">
                        <table class="table table-striped table-condensed table-bordered">
                            @if (Model != null)
                            {
                                for (var i = 0; i < Model.Count; i++)
                                {
                                    <tr>
                                        <td>
                                            @Html.HiddenFor(m => m[i].Id)
                                            @Html.CheckBoxFor(m => m[i].ApplyStatus)
                                            @Html.HiddenFor(m => m[i].EnrichmentTechique)
                                            @Html.DisplayFor(m => m[i].EnrichmentTechique)
                                        </td>
                                        <td>
                                           @if (Html.DisplayFor(m => m[i].EnrichmentTechique).ToString() == (AT.Repository.Enums.AdaptationTechniquesEnum.Link).ToString())
                                           { 
                                               @Html.ActionLink("Configure Hyperlinks","Index","Link")
                                           }
                                        </td>
                                    </tr>
                                }
                            }
                        </table>
                    </div>
                    <div class="panel-footer">
                        @* <input type="button" value="Go Somewhere Else" onclick="location.href='<%: Url.Action("Action", "Controller" ) %>'" />*@
                     
                        <button type="submit" class="btn btn-default">
                            <i class="glyphicon glyphicon-floppy-save"></i> Save
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
