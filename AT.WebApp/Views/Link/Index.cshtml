@using AT.Repository.Enums;
'@model IEnumerable<AT.Repository.Model.TextToReadHyperlink>

@{
    ViewBag.Title = "Index";
}

<div class="container body-content">
    <div class="row">

        <div class="col-lg-12">
            <h3>Hyperlink texts</h3>

            <div class="panel panel-default">
                <div class="panel-heading">
                    @Html.ActionLink("Create New", "Create")
                </div>
                <div class="panel-body">

                    <table class="table table-striped">
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.HyperlinkText)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.LanguageCode)
                            </th>
                            <th></th>
                        </tr>

                        @foreach (var item in Model)
                        {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.HyperlinkText)
                            </td>
                            <td>
                                
                                @{
                                  int value = item.LanguageCode;
                                  LanguageCodes enumDisplayStatus = (LanguageCodes)value;
                                  string stringValue = enumDisplayStatus.ToString();
                                
                                  @stringValue;
                                }
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                            </td>
                        </tr>
                        }

                    </table>
                </div>
            </div>
        </div>
    </div>
</div>